{% assign w = 1240 %}
{% assign h = 874 %}

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ shop.name }} | {{ page.title }}</title>
  {{ content_for_header }}
  <script src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js"></script>
  <script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/16327/gsap-latest-beta.min.js"></script>
  <script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/16327/ScrollTrigger.min.js"></script>
  {{ 'scrolling-style.css' | asset_url | stylesheet_tag }}
  {{ 'scroll-handler.js' | asset_url | script_tag }}
</head>

<body>
  <div class="loader df aic jcc">
    <div>
      <h1>Loading</h1>
      <h2 class="loader--text">0%</h2>
    </div>
  </div>

  <div class="demo-wrapper">
    <header class="df aic jcc">
      <div>
        <h1>stikbalm</h1>
        <h2>demo</h2>
      </div>
    </header>

    <section class="demo-text">
      <div class="wrapper text">
        BUY NOW   BUY NOW
      </div>
    </section>

    {% for i in (1..4) %}
      <section class="demo-gallery">
        <ul class="wrapper">
          {% for j in (1..4) %}
            <li>
              <img
                src="https://source.unsplash.com/random/{{ w }}x{{ h }}?sig={{ j }}"
                width="{{ w }}"
                height="{{ h }}" />
            </li>
          {% endfor %}
        </ul>
      </section>
    {% endfor %}

    <section class="demo-text">
      <div class="wrapper text">
        BUY NOW   BUY NOW
      </div>
    </section>

    <footer class="df aic jcc">
      <p>Images from
        <a href="https://unsplash.com/">Unsplash</a>
      </p>
    </footer>

    {{ content_for_layout }}

  </body>
</body>